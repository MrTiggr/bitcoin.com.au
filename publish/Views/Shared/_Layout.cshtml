@{
    ViewBag.Site = "Bitcoin Australia";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Site : @ViewBag.Title</title>
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />
    <link rel="icon" type="image/png"  href="@Url.Content("~/favicon.png")" />
    <link href="@Url.Content("~/Content/NewBasic.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <a href="@Url.Action("Index", "Home")">
                <img src="/Content/bitcoinaus_small.png" alt="Aus Bitcoin Logo" name="TheLogo" width="180"
                    height="90" id="Bitcoin Australia" style="background: #C6D580; display: block;" /></a>
        </header>
        <div class="leftbar">
            <nav>
                <ul id="menu">  
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @{Html.RenderPartial("_OtherLinks");}
                </ul>
            </nav>
            <aside>
                @{Html.RenderPartial("_LeftAside");}
            </aside>
        </div>
        <article class="content">
            @RenderBody()
        </article>
        <aside>
            <div class="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            @{Html.RenderPartial("_RightAside");}
        </aside>
        <footer>
            @{Html.RenderPartial("_Footer");}
        </footer>
    </div>
</body>
</html>
